<h1><%= @article.name %></h1>
<p><%= @article.content %></p>
<br><br>
<h3>Comments</h3>
<% @comments.each do |comment| %>
<b><%= comment.created_at %></b>
<br>
<%= comment.content %>
<br><br>
<% end %>
<br>
<%= form_for @comment do |f| %>
<br>
<b><%= f.label 'Leave comment' %></b>
<br>
<%= f.text_area :content%>
<%= f.hidden_field :article_id, value: @article.id %>
<br>
<%= f.submit 'Submit comment' %>
<br>
<% end %>